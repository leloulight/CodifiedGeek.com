                    $endDate = strtotime(date('Y-m-d',time()));
                } else {
                    $endDate = strtotime($job->enddate);
                }
                $days = (($endDate - strtotime($job->startdate)) / 86400);
                $time = $days/365;
                $months = $time/12;//get the number of months
                //next we need the years/months/days
                if($time >= 1) {
                    //multiple years
                    $time = round($time);
                    if($time > 1) {
                        $time .= " years";
                    } else {
                        $time .= " year";
                    }
                } else {
                    //multiple months
                    $time = round($months);
                    if($time > 1) {
                        $time .= " months";
                    } else {
                        $time = "1 month";
                    }
                }; ?>

