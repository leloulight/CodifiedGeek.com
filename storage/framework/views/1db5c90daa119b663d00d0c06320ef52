                        //multiple years
                        $time = round($time);
                        if($time > 1) {
                            $time .= " years";
                        } else {
                            $time .= " year";
                        }
                    } else {
                        //multiple months
                        $time = round($months);
                        if($time > 1) {
                            $time .= " months";
                        } else {
                            $time = "1 month";
